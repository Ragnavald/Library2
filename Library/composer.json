{
    "name": "ronaldoavila/librarysystem",
    "description": "Sistema Biblioteca",
    "type": "library",
    "authors": [
        {
            "name": "Ronaldo Ávila",
            "email": "l08305074@gmail.com"
        }
    ],
    "require": {
        "phpmailer/phpmailer": "^6.9.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Sistema\\Biblioteca\\":"src/"
        }
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 src/",
        "phpinfo": "php --info ",
        "check": [
            "@cs",
            "@phpinfo"
        ]
    },
    "scripts-descriptions": {
        "check":"Roda a verificação CS"
    }


}
